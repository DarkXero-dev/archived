#!/bin/bash
#set -e
###############################################################################
# Author	:	Erik Dubois Modified by DarkXero
# Website	:	https://www.xerolinux.online
###############################################################################
echo
echo "###############################################################################"
echo "###                               Check 1  LSPCI                           ####"
echo "###############################################################################"
echo
lspci -x | grep VGA

lspci -vnnn | perl -lne 'print if /^\d+\:.+(\[\S+\:\S+\])/' | grep VGA

echo
echo "###############################################################################"
echo "###                               Check 2  GLXINFO                         ####"
echo "###############################################################################"
echo

glxinfo | grep -E "OpenGL vendor|OpenGL renderer*"

echo
echo "###############################################################################"
echo "###                               Check 3  NVIDIA-SMI                      ####"
echo "###############################################################################"
echo

if pacman -Qi nvidia-utils &> /dev/null; then
	nvidia-smi -L
else
	echo "No nvidia driver present"
fi
echo
echo "###############################################################################"
echo "###                               DONE                                     ####"
echo "###############################################################################"
echo
